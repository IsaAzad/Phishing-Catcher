{
  "manifest_version": 3,
  "name": "Phishing Catcher",
  "version": "1.0.0",
  "description": "A real-time phishing detection tool for Chrome to identify suspicious links on webpages.",
  "permissions": [
    "activeTab",
    "scripting",
    "tabs",
    "storage"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon.png",
      "48": "icons/icon.png",
      "128": "icons/icon.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*","file://*/*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon.png",
    "48": "icons/icon.png",
    "128": "icons/icon.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["icons/*", "styles.css"],
      "matches": ["http://*/*", "https://*/*"]
    }
  ],
  
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
}
}
